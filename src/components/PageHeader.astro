---
import Icon from "astro-icon";
---

<div
  class="relative z-10 py-4 px-4 flex flex-col sm:flex-row items-center justify-between"
  transition:name="page header"
  transition:persist
>
  <!-- Logo y título -->
  <div class="flex items-center gap-2 mb-4 sm:mb-0">
    <a
      href="/"
      aria-label="Ir a la página principal"
      class="flex items-center gap-2 text-xl sm:text-2xl font-bold text-white"
    >
      <img src="../assets/images/Logo/LOGO_NEGATIVO.png" alt="Logo Negativo" class="h-12 w-12 sm:h-14 sm:w-14 dark:inline-block" />
      <span>LA SONRISA FESTIVAL</span>
    </a>
  </div>

  <!-- Navegación -->
  <nav class="w-full sm:w-auto text-center sm:text-left">
    <ul class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-8">
      <li><a href="/ediciones" class="hover:text-customYellow">Ediciones</a></li>
      <li><a href="/lasa" class="hover:text-customYellow">LASA</a></li>
      <li><a href="/festival" class="hover:text-customYellow">Colaboradores</a></li>
      <li><a href="/contact" class="hover:text-customYellow">Únete</a></li>
    </ul>
  </nav>

  <!-- Redes sociales -->
  <div class="flex justify-center sm:justify-end space-x-4 mt-4 sm:mt-0">
    <a
      target="_blank"
      aria-label="Instagram"
      href="https://instagram.com/lasonrisafestival"
      class="text-gray-200 hover:text-white"
    >
      <Icon name="mdi:instagram" class="h-6 w-6 sm:h-7 sm:w-7" />
    </a>
    <a
      target="_blank"
      aria-label="Linkedin"
      href="https://www.linkedin.com/in/sonrisa-festival-428235239"
      class="text-gray-200 hover:text-white"
    >
      <Icon name="mdi:linkedin" class="h-6 w-6 sm:h-7 sm:w-7" />
    </a>
    <a
      target="_blank"
      aria-label="Correo electrónico"
      href="mailto:lasonrisademayo@gmail.com"
      class="text-gray-200 hover:text-white"
    >
      <Icon name="mdi:at" class="h-6 w-6 sm:h-7 sm:w-7" />
    </a>
  </div>
</div>